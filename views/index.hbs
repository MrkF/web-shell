    function formatDate(dateField) {

        var ms = dateField.getMilliseconds();
        if (ms < 10) ms = '0' + ms;

        var ss = dateField.getSeconds();
        if (ss < 10) ss = '0' + ss;

        var mn = dateField.getMinutes();
        if (mn < 10) mn = '0' + mn;

        var hh = dateField.getHours();
        if (hh < 10) hh = '0' + hh;

        return hh + ':' + mn + ':' + ss + ':' + ms;
    }


